{
  "repository": {
    "owner": "example-owner",
    "name": "simple-webapp",
    "branch": "main"
  },
  "features": {
    "labels": true,
    "workflows": true,
    "agentRules": ["cursor", "claude", "windsurf"],
    "deployments": {
      "enabled": true,
      "environments": ["ppe", "production"]
    }
  },
  "phases": {
    "design": { 
      "required_approvals": 1,
      "auto_assign": "claude"
    },
    "implementation": { 
      "required_approvals": 2,
      "auto_assign": "cursor"
    },
    "testing": { 
      "required_approvals": 1,
      "auto_assign": "windsurf",
      "auto_deploy_on_approval": true
    }
  },
  "customization": {
    "additionalLabels": [
      {
        "name": "priority:critical",
        "color": "D93F0B",
        "description": "Critical priority - immediate attention required"
      },
      {
        "name": "priority:high",
        "color": "FBCA04",
        "description": "High priority - important but not critical"
      }
    ],
    "workflowOverrides": {
      "ci_timeout": "10m",
      "deployment_timeout": "15m"
    },
    "agentRuleOverrides": {
      "cursor": {
        "test_coverage_minimum": 80,
        "linting_strict": true
      },
      "claude": {
        "rfc_template": "custom-rfc-template.md",
        "architecture_review_required": true
      },
      "windsurf": {
        "performance_threshold": "2s",
        "security_scan_required": true
      }
    }
  },
  "notifications": {
    "slack": "https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK",
    "teams": "https://your-org.webhook.office.com/webhookb2/YOUR/TEAMS/WEBHOOK"
  },
  "compliance": {
    "audit_logging": true,
    "approval_workflow": true,
    "rollback_capability": true
  }
}

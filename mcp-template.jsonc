{
  // Model Context Protocol (MCP) Configuration Template
  // This file defines how AI agents interact with external tools and services
  
  "mcpServers": {
    "github": {
      "serverUrl": "https://api.githubcopilot.com/mcp/",
      "headers": {
        "Authorization": "Bearer ${GITHUB_TOKEN}"
      }
    },
    "cursor": {
      "serverUrl": "https://cursor.sh/api/mcp",
      "headers": {
        "Authorization": "Bearer ${CURSOR_TOKEN}"
      }
    },
    "windsurf": {
      "serverUrl": "https://api.windsurf.ai/mcp",
      "headers": {
        "Authorization": "Bearer ${WINDSURF_TOKEN}"
      }
    }
  },
  
  "phaseConfiguration": {
    "design": {
      "primaryAgent": "claude",
      "requiredRules": [
        "integrity-and-test-ethics.md",
        "architecture.md",
        "simplicity.md"
      ],
      "outputArtifacts": [
        "rfc",
        "technical-spec"
      ]
    },
    "implementation": {
      "primaryAgent": "cursor",
      "requiredRules": [
        "integrity-and-test-ethics.md",
        "architecture.md",
        "simplicity.md"
      ],
      "outputArtifacts": [
        "code",
        "tests"
      ]
    },
    "testing": {
      "primaryAgent": "windsurf",
      "requiredRules": [
        "integrity-and-test-ethics.md",
        "agent-testing-guidelines.md"
      ],
      "outputArtifacts": [
        "test-report",
        "evidence"
      ]
    }
  },
  
  "handoffProtocols": {
    "design-to-implementation": {
      "requiredArtifacts": ["rfc", "technical-spec"],
      "validationChecks": ["spec-completeness", "architecture-compliance"]
    },
    "implementation-to-testing": {
      "requiredArtifacts": ["code", "tests"],
      "validationChecks": ["build-passing", "lint-passing"]
    }
  }
}